@{
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portfolio_site_hw</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portfolio_site_hw.styles.css" asp-append-version="true" />

    <style>
        header{
            z-index: 1000;
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 9999;
        }
        .navbar {
            background-color: white;
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 9999;
        }

        .navbar-brand {
            font-weight: 700;
            color: #2323ff !important;
        }

        .nav-link {
            color: #11111f !important;
            transition: color 0.3s;
        }

            .nav-link:hover {
                color: gray !important;
            }

            .nav-link.active { 
                font-weight: 600;
                color: #2323ff !important;
            }
    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg fixed-top">
            <div class="container">
                <a class="navbar-brand" href="#">MyPortfolio</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link @(currentAction == "Index" ? "active" : "")" asp-controller="People" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentAction == "About" ? "active" : "")" asp-controller="People" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentAction == "Skills" ? "active" : "")" asp-controller="People" asp-action="Skills">Skills</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentAction == "Contact" ? "active" : "")" asp-controller="People" asp-action="Contact">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
