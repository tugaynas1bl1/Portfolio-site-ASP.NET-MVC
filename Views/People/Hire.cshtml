@model IEnumerable<Portfolio_site_hw.Models.Person>

@{
    ViewData["Title"] = "Hire Me";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hire Me - Portfolio</title>

    <!-- Bootstrap & FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding-top: 56px; /* navbar height */
            background-color: #050510;
            color: #fff;
        }

        a {
            text-decoration: none;
        }

        /* ===== HIRE ME SECTION ===== */
        .hire-section {
            width: 100%;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 100px 20px;
            position: relative;
            overflow: hidden;
        }

        .hire-bg-text {
            position: absolute;
            top: 30%;
            left: -150px;
            font-size: 160px;
            font-weight: 800;
            color: transparent;
            -webkit-text-stroke: 2px #2323ff;
            opacity: 0.1;
            transform: rotate(-90deg);
        }

        .hire-card {
            background: rgba(255,255,255,0.05);
            backdrop-filter: blur(12px);
            border-radius: 22px;
            padding: 60px;
            border: 1px solid rgba(255,255,255,0.08);
            width: 100%;
            max-width: 600px;
            box-shadow: 0 25px 50px rgba(35,35,255,0.2);
            transition: 0.4s;
        }

            .hire-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 35px 80px rgba(35,35,255,0.4);
            }

            .hire-card h1 {
                font-size: 48px;
                font-weight: 700;
                margin-bottom: 25px;
            }

        .form-control {
            background: rgba(255,255,255,0.05);
            border: 1px solid rgba(255,255,255,0.2);
            color: #fff;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 20px;
        }

            .form-control::placeholder {
                color: rgba(255,255,255,0.6);
            }

        .btn-submit {
            background-color: #2323ff;
            color: #fff;
            font-weight: 500;
            padding: 12px 25px;
            border-radius: 10px;
            border: none;
            transition: all 0.3s ease-in-out;
        }

            .btn-submit:hover {
                background-color: #1f9fff;
                transform: translateY(-3px);
                box-shadow: 0 10px 30px rgba(35,35,255,0.4);
            }

        /* ===== FOOTER ===== */
        footer {
            background-color: #1f1f1f;
            color: #ccc;
            text-align: center;
            padding: 25px 0;
            margin-top: 50px;
        }
    </style>
</head>
<body>   

    <!-- ===== HIRE ME FORM ===== -->
    <section class="hire-section">
        <div class="hire-bg-text">HIRE ME</div>

        <div class="hire-card">
            <h1>Hire Me</h1>
            <form method="post" action="/People/SubmitHire">
                <input type="text" name="Name" class="form-control" placeholder="Your Name" required />
                <input type="email" name="Email" class="form-control" placeholder="Your E-mail" required />
                <textarea name="Message" class="form-control" placeholder="Your Message" rows="6" required></textarea>
                <button type="submit" class="btn-submit">Send Message</button>
            </form>
        </div>
    </section>

    <!-- ===== FOOTER ===== -->
    <footer>
        &copy; @DateTime.Now.Year - @Model.FirstOrDefault()?.Name @Model.FirstOrDefault()?.Surname Portfolio
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
