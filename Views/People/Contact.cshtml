@model IEnumerable<Portfolio_site_hw.Models.Person>

@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Contact - Portfolio</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: #050510;
            color: #fff;
        }
        html{

        }

        /* ===== CONTACT SECTION ===== */
        .contact-section {
            width: 100%;
            min-height: 100vh;
            padding: 90px 40px 70px;
            position: relative;
            overflow: hidden;
        }

        .contact-bg-text {
            position: absolute;
            top: 35%;
            left: -250px;
            font-size: 140px;
            font-weight: 800;
            color: transparent;
            -webkit-text-stroke: 2px #2323ff;
            opacity: 0.12;
            transform: rotate(-90deg);
        }

        .contact-card {
            margin-top: 100px;
            background: rgba(255,255,255,0.05);
            backdrop-filter: blur(12px);
            border-radius: 22px;
            padding: 40px;
            border: 1px solid rgba(255,255,255,0.08);
            transition: 0.4s;
        }

            .contact-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 20px 60px rgba(35,35,255,0.35);
            }

        .contact-title {
            font-size: 40px;
            font-weight: 700;
        }

        .contact-subtitle {
            color: #d6d6ff;
            font-size: 16px;
            margin-bottom: 25px;
        }

        .contact-info {
            margin-top: 20px;
        }

            .contact-info .info-item {
                background: rgba(255,255,255,0.07);
                padding: 12px 18px;
                border-radius: 14px;
                margin-bottom: 10px;
            }

        .social-icons {
            margin-top: 16px;
        }

            .social-icons a {
                display: inline-block;
                width: 42px;
                height: 42px;
                line-height: 42px;
                text-align: center;
                border-radius: 50%;
                background: rgba(255,255,255,0.07);
                margin-right: 10px;
                color: #fff;
                transition: 0.3s;
            }

                .social-icons a:hover {
                    background: #2323ff;
                    transform: translateY(-3px);
                }
    </style>
</head>
<body>

    <!-- ===== CONTACT ===== -->
    <section class="contact-section">
        <div class="contact-bg-text">CONTACT</div>

        <div class="container">
            @foreach (var person in Model)
            {
                <div class="row justify-content-center">
                    <div class="col-lg-10">
                        <div class="contact-card">
                            <h1 class="contact-title">Contact</h1>
                            <div class="contact-subtitle">
                                You can reach me through the information below.
                            </div>

                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="contact-info">
                                        <div class="info-item"><strong>Email:</strong> @person.Email</div>
                                        <div class="info-item"><strong>Phone:</strong> @person.Phone</div>
                                        <div class="info-item"><strong>Location:</strong> Baku, Azerbaijan</div>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="contact-info">
                                        <div><strong>Social Medias</strong></div>

                                        <div class="social-icons">
                                            @if (person.SocialMedias != null)
                                            {
                                                foreach (var sm in person.SocialMedias)
                                                {
                                                    <a href="@sm.Url" target="_blank" title="@sm.Platform">
                                                        <i class="@sm.PlatformIconRoot"></i>
                                                    </a>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
