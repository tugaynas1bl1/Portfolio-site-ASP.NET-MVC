@model IEnumerable<Portfolio_site_hw.Models.Person>

@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>About - Portfolio</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: #050510;
            color: #fff;
        }
        

        /* ===== ABOUT SECTION ===== */
        .about-section {
            width: 100%;
            min-height: 100vh;
            padding: 140px 80px 100px;
            position: relative;
            overflow: hidden;
        }

        .about-bg-text {
            position: absolute;
            top: 37%;
            left: -170px;
            font-size: 160px;
            font-weight: 800;
            color: transparent;
            -webkit-text-stroke: 2px #2323ff;
            opacity: 0.15;
            transform: rotate(-90deg);
        }

        .about-card {
            background: rgba(255,255,255,0.05);
            backdrop-filter: blur(12px);
            border-radius: 22px;
            padding: 60px;
            border: 1px solid rgba(255,255,255,0.08);
            transition: 0.4s;
        }

            .about-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 25px 70px rgba(35,35,255,0.35);
            }

        .about-title {
            font-size: 48px;
            font-weight: 700;
        }

        .about-job {
            color: #2323ff;
            font-size: 22px;
            margin-bottom: 25px;
        }

        .about-text {
            font-size: 17px;
            line-height: 1.9;
            color: #d6d6ff;
        }

        .info-box {
            display: flex;
            gap: 30px;
            margin-top: 30px;
            flex-wrap: wrap;
            cursor: pointer;
        }

        .info-item {
            background: rgba(255,255,255,0.07);
            padding: 14px 26px;
            border-radius: 14px;
            transition: 0.3s;
        }

            .info-item:hover {
                background: #2323ff;
            }

        
    </style>
</head>
<body>

    

    <!-- ===== ABOUT ===== -->
    <section class="about-section">
        <div class="about-bg-text">ABOUT</div>

        <div class="container">
            @foreach (var person in Model)
            {
                <div class="row justify-content-center">
                    <div class="col-lg-10">
                        <div class="about-card">
                            <h1 class="about-title">
                                @person.Name <span style="color:#2323ff">@person.Surname</span>
                            </h1>

                            <div class="about-job">@person.JobTitle</div>

                            <p class="about-text">@person.About</p>

                            <div class="info-box">
                                <div class="info-item"><strong>Email:</strong> @person.Email</div>
                                <div class="info-item"><strong>Phone:</strong> @person.Phone</div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
